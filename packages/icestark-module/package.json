{
  "name": "@ice/stark-module",
  "version": "0.1.1",
  "description": "icestark-module is a JavaScript library for loading module.",
  "scripts": {
    "build": "npm run lib && npm run umd",
    "lib": "rm -rf lib && tsc",
    "umd": "rm -rf umd && webpack --config webpack.config.js",
    "watch": "tsc -w",
    "watch:umd": "webpack --config webpack.dev.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint --cache --ext .ts ./",
    "coverage": "codecov"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "umd"
  ],
  "license": "MIT",
  "keywords": [
    "ice",
    "module",
    "micro-frontends",
    "microfrontends"
  ],
  "bugs": {
    "url": "https://github.com/ice-lab/icestark/issues"
  },
  "homepage": "https://github.com/ice-lab/icestark",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ice-lab/icestark.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@ice/spec": "^0.1.4",
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "codecov": "^3.4.0",
    "eslint": "^5.16.0",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "stylelint": "^10.1.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.4.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "preset": "ts-jest",
    "automock": false,
    "setupFiles": [
      "./setupJest.ts"
    ]
  }
}
